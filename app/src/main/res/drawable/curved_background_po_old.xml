<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng Đổ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BA666666" />
            <corners android:radius="30dp" />
            <padding
                android:left="0.5dp"
                android:top="0.5dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>


    <item android:top="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E7E3D3" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>