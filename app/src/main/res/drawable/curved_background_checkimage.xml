<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#66000000" /> <!-- Màu bóng đổ (xám mờ) -->
        </shape>
    </item>

    <!-- Nền chính -->
    <item android:top="4dp" android:left="4dp"> <!-- Khoảng dịch bóng -->
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#E9D4C1" /> <!-- Màu nền (trắng) -->
        </shape>
    </item>
</layer-list>
